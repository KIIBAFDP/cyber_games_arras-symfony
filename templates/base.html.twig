<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
        <link rel="stylesheet" href="{{ asset('css/styles.css') }}">
        <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css">
        <style>
            body, html {
                height: 100%;
                margin: 0;
            }
            .content {
                min-height: 100%;
                display: flex;
                flex-direction: column;
            }
            .main {
                flex: 1;
                display: flex;
                justify-content: center;
                align-items: center;
            }
            .card {
                margin: 10px 0;
            }
            body {
                background: linear-gradient(45deg, #8e44ad,rgb(255, 255, 255), #8e44ad,rgb(255, 255, 255));
                background-size: 400% 400%;
                animation: gradientBG 15s ease infinite;
            }

            @keyframes gradientBG {
                0% { background-position: 0% 50%; }
                50% { background-position: 100% 50%; }
                100% { background-position: 0% 50%; }
            }
        </style>
        {% block stylesheets %}
        {% endblock %}
    </head>
    <body>
        <div class="content">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <a class="navbar-brand mb-0 h1">Cyber Games</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarNav">
                        <ul class="navbar-nav me-auto">
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('game.index') }}">Jeux</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="{{ path('tournament.index') }}">Tournois</a>
                            </li>
                        </ul>
                        <ul class="navbar-nav ms-auto">
                            {% if app.user %}
                                <li class="nav-item">
                                    <span class="navbar-text"> {{ app.user.pseudo }}</span>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_logout') }}">Se déconnecter</a>
                                </li>
                                {% if is_granted('ROLE_ADMIN') %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="/adminer.php">BDD</a>
                                    </li>
                                {% endif %}
                            {% else %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_login') }}">Se connecter</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ path('app_register') }}">S'enregistrer</a>
                                </li>
                            {% endif %}
                        </ul>
                    </div>
                </div>
            </nav>
            <div class="container my-4 main">
                {% block body %}{% endblock %}
            </div>
            <footer class="bg-light text-center py-3 mt-auto">
                <div class="container">
                    <span class="text-muted">© 2023 Cyber Games</span>
                </div>
            </footer>
        </div>
        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </body>
</html>