{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block body %}
<div class="d-flex justify-content-center align-items-center" style="min-height: calc(100vh - 56px);">
    <div class="card" style="width: 24rem; margin: 0;">
        <div class="card-body">
            <h1 class="card-title text-center">Se connecter</h1>
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="inputEmail" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
                </div>
                <div class="mb-3">
                    <label for="inputPassword" class="form-label">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>
                </div>
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <button class="btn btn-primary w-100" type="submit">Se connecter</button>
            </form>
            <div class="mt-3 text-center">
                <a href="{{ path('app_register') }}">Si tu n'as pas de compte, crée un compte</a>
            </div>
            <div class="mt-3 text-center">
                <a href="{{ path('app_forgot_password_request') }}">J'ai oublié mon mot de passe</a>
            </div>
        </div>
    </div>
</div>
{% endblock %}
