{% extends 'base.html.twig' %}

{% block title %}Jeux{% endblock %}

{% block body %}
<div class="container mt-4 animate__animated animate__fadeIn">
    <div class="row justify-content-center mb-4">
        <div class="col-md-8">
            <div class="card text-center shadow-sm">
                <div class="card-body">
                    <h1 class="display-4 text-dark">Liste des jeux</h1>
                </div>
            </div>
        </div>
    </div>
    {% if is_granted('ROLE_ADMIN') %}
        <div class="row mb-4">
            <div class="col text-center">
                <a href="{{ path('game.new') }}" class="btn btn-success">Cr√©er un nouveau jeu</a>
            </div>
        </div>
    {% endif %}
    <div class="row">
        {% for game in games %}
            <div class="col-md-4 mb-4 d-flex align-items-stretch">
                <div class="card h-100 shadow-sm animate__animated animate__fadeInUp">
                    {% if game.image %}
                        <img src="{{ asset('uploads/images/' ~ game.image) }}" class="card-img-top" alt="{{ game.title }}">
                    {% endif %}
                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title">{{ game.title }}</h5>
                        <p class="card-text">{{ game.description|slice(0, 100) ~ '...' }}</p>
                        <div class="mt-auto">
                            <a href="{{ path('game.show', {id: game.id, slug: game.slug}) }}" class="btn btn-primary">Voir</a>
                            {% if is_granted('ROLE_ADMIN') %}
                                <a href="{{ path('game.edit', {id: game.id}) }}" class="btn btn-warning">Modifier</a>
                            {% endif %}
                        </div>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <div class="alert alert-info text-center animate__animated animate__fadeIn" role="alert">
                    Aucun jeu disponible pour le moment.
                </div>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}
