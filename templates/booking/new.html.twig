{% extends 'base.html.twig' %}

{% block title %}Nouvelle réservation{% endblock %}

{% block body %}
<div class="container mt-4">
    <h1 class="mb-4">Nouvelle réservation</h1>
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    <div class="card shadow-sm p-4">
        {{ form_start(bookingForm) }}
            <div class="mb-3">
                {{ form_label(bookingForm.computer, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(bookingForm.computer, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(bookingForm.computer) }}
            </div>
            <div class="mb-3">
                {{ form_label(bookingForm.startTime, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(bookingForm.startTime, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(bookingForm.startTime) }}
            </div>
            <div class="mb-3">
                {{ form_label(bookingForm.duration, null, {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(bookingForm.duration, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(bookingForm.duration) }}
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-success">Réserver</button>
            </div>
        {{ form_end(bookingForm) }}
    </div>
</div>
{% endblock %}